{% macro blogComment(entry) %}
  <div class="comments__item-inner">
    <div class="comments__img">
      <div class="rounded-full bg-image js-lazy" data-bg="{{ entry.img }}"></div>
    </div>

    <div class="comments__body">

      <div class="comments__header">
        <div>
          <h4>{{ entry.name }}</h4>
        </div>

        <div>
          <p class="mt-4"> {{ entry.date }}</p>
        </div>
      </div>

      <div class="comments__text">
        <p>
          {{ entry.text }}
        </p>
      </div>

      <div class="comments__reply">
        <a class="button -underline text-black" href="#">
          Reply
        </a>
      </div>
      
    </div>
  </div>
{% endmacro %}





{#
{{ mixins.projectsNav({
  prev: {
    img: [portfolioImgPath, 'horizontal', '6.jpg'] | join('/'),
    link: portfolio[5].link,
    title: portfolio[5].title
  },
  next: {
    img: [portfolioImgPath, 'horizontal', '2.jpg'] | join('/'),
    link: portfolio[1].link,
    title: portfolio[1].title
  }
}) }}
#}
{% macro projectsNav(item) %}
  <!-- section start -->
  <section class="projects-nav">
    <!-- row start -->
    <div class="row no-gutters">

      <div class="col-lg-6">
        <a
          data-barba
          href="{{ item.prev.link }}"
          class="projects-nav__item -prev bg-dark-1"
        >
          <div class="projects-nav__img">
            <div class="bg-image js-lazy" data-bg="{{ item.prev.img }}"></div>
          </div>
    
          <div class="projects-nav__content">
            <div class="projects-nav__icon">
              <i
                class="size-xl str-width-xs text-white"
                data-feather="arrow-left-circle"
              ></i>
            </div>

            <h3 class="text-4xl fw-400 tracking-none text-white">
              {{ item.prev.title }}
            </h3>

            <p class="projects-nav__text -prev text-sm fw-500 text-white tracking-md uppercase">
              PREV
            </p>
          </div>
        </a>
      </div>
  
  
      <div class="col-lg-6">
        <a
          data-barba
          href="{{ item.next.link }}"
          class="projects-nav__item -next bg-dark-1"
        >
          <div class="projects-nav__img">
            <div class="bg-image js-lazy" data-bg="{{ item.next.img }}"></div>
          </div>
    
          <div class="projects-nav__content">
            <h3 class="text-4xl fw-400 tracking-none text-white">
              {{ item.next.title }}
            </h3>

            <div class="projects-nav__icon">
              <i
                class="size-xl str-width-xs text-white"
                data-feather="arrow-right-circle"
              ></i>
            </div>

            <p class="projects-nav__text -next text-sm fw-500 text-white tracking-md uppercase">
              NEXT
            </p>
          </div>
        </a>
      </div>

    </div>
    <!-- row end -->
  </section>
  <!-- section end -->
{% endmacro %}



