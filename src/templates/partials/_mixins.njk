{% macro pageHeader(item) %}
  <!-- section start -->
  <section class="{{ item.pt }} {{ item.pb }}">
    <!-- container start -->
    <div class="container">
      <!-- row start -->
      <div class="row">
        <div class="col-xl-7 col-lg-8">
          <ul class="breadcrumbs text-black mb-40">
            <li class="breadcrumbs-item">
              <a data-barba href="home-1.html">
                Home
              </a>
            </li>
            <li class="breadcrumbs-item active" aria-current="page">
              {{ item.bread }}
            </li>
          </ul>

          <div class="sectionHeading -lg">
            <h1 class="sectionHeading__title">
              {{ item.title }}
            </h1>
          </div>
        </div>
      </div>
      <!-- row end -->
    </div>
    <!-- container end -->
  </section>
  <!-- section end -->
{% endmacro %}



